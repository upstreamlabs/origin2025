---
// Components
import Button from "components/Button.astro";

interface Props {
    subtitle: string;
    title: string;
    location: string;
    image: string;
    text: string;
    ctaButton?: {
        text: string;
        link: string;
        openInNewTab?: boolean;
    };
}

const { subtitle, title, location, image, text, ctaButton } = Astro.props;
---

<section
    class="section section-big-image"
    data-theme-section="light"
    data-bg-section="lightgray"
>
    <div class="container wide" id="venue">
        <div class="row">
            <div class="col">
                <figure>
                    <div class="overlay playpause">
<!--                         <video class="overlay" preload="auto" autoplay loop muted webkit-playsinline playsinline poster="/videos/gosim-paris-compressed.webp">
                            <source src="/videos/gosim-paris-compressed.webm" type="video/webm">
                            <source src="/videos/gosim-paris-compressed.mp4" type="video/mp4">
                        </video> -->
                        <img
                            src={image}
                            alt="Station F"
                            class="overlay"
                            loading="lazy"
                        >
                    </div>

                    {ctaButton?.text &&
                        <div class="col-row col-row-btn">
                            <Button
                                text={ctaButton.text}
                                link={ctaButton.link}
                                openInNewTab={ctaButton?.openInNewTab}
                                class="btn light btn-hover xl"
                            />
                        </div>
                    }
                </figure>
            </div>
        </div>
    </div>
</section>

<section
    class="section section-location-info"
    data-theme-section="light"
    data-bg-section="lightgray"
>
    <div class="container wide">
        <div class="row grid">
            <div class="border-bottom"></div>
            <div class="col col-info">
                <div class="location-flex">
                    <p>{subtitle}</p>
                    <h2>{title}</h2>
                    <p>{location}</p>
                </div>
            </div>
            <div class="col col-text styled-content">
                <div class="col-row">
                    <p>{text}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .section-location-info h2 {
        font-size: 2rem;
        line-height: 1.2;
    }
    
    .location-flex p:last-child {
        font-size: 1.25rem;
        font-weight: 500;
    }
    
    .col-text.styled-content p {
        font-size: 1.25rem;
        line-height: 1.6;
    }
    
    @media (max-width: 768px) {
        .section-location-info h2 {
            font-size: 1.5rem;
        }
        
        .location-flex p:last-child {
            font-size: 1.1rem;
        }
        
        .col-text.styled-content p {
            font-size: 1.1rem;
        }
    }
</style>
