---
interface Props {
  width?: number | string;
  height?: number | string;
}

const width = Astro.props.width ?? 220;
const height = Astro.props.height ?? 52;
---

<svg
  width={width}
  height={height}
  viewBox="0 0 220 52"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  role="img"
  aria-label="Upstream Origin 2025｜源起之道"
>
  <text
    x="0"
    y="24"
    font-size="16"
    font-weight="700"
    letter-spacing="0.08em"
    fill="#FFC640"
    font-family="'Manrope', 'Inter', sans-serif"
    style="text-transform: uppercase;"
  >
    UPSTREAM ORIGIN
  </text>
  <text
    x="0"
    y="42"
    font-size="13"
    font-weight="600"
    letter-spacing="0.18em"
    fill="#FFD15A"
    opacity="0.9"
    font-family="'Manrope', 'Inter', sans-serif"
  >
    源起之道 · 2025
  </text>
</svg>
