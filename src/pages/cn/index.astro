  {
    title: "4",
    suffix: "周",
    subtitle: "全面的开源生态和商业技能线上训练营与远程导师辅导",
    image: statOnline,
    imageAlt: "象征持续学习的流动波形",
  },
  {
    title: "10",
    suffix: "万元",
    subtitle: "Upstream Origin 开源生态发展基金 10 万元和导师和设施服务",
    image: statGrant,
    imageAlt: "象征资金支持的放射曲线",
  },
  {
    title: "5",
    suffix: "天",
    subtitle: "沉浸式的伙伴协作和导师辅导共创营",
    image: statOffline,
    imageAlt: "象征现场协作的金色光纹",
  },
