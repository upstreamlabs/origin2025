---
import Layout from "layouts/Layout.astro";
import Hero from "components/Hero.astro";
import Intro from "components/Intro.astro";
import FeatureSpotlight from "components/FeatureSpotlight.astro";
import ProgramTimeline from "components/ProgramTimeline.astro";
import SupportShowcase from "components/SupportShowcase.astro";
import Cards from "components/Cards.astro";
import Statistics from "components/Statistics.astro";
import Button from "components/Button.astro";

import statOnline from "images/upstream/stat-online.png";
import statOffline from "images/upstream/stat-offline.png";
import statGrant from "images/upstream/stat-grant.png";

const heroLinks = [
  {
    text: "立即报名",
    link: "https://opencamp.cn/UpstreamLabs/camp/2025",
    openInNewTab: true,
  },
  {
    text: "查看课程安排",
    link: "#program",
  },
];

const heroHighlights = [
  "根植开源：深入学习开源精神与治理，理解公共产品的核心价值。",
  "AI 赋能：掌握前沿 AI 工具，高效构建社区影响力与内容生态。",
  "共创实践：深入真实开源项目，为其设计可持续的运营与增长方案。",
  "生态支持：优秀的共创方案将获得 Upstream Origin 10 万元生态发展基金、导师和其他项目增长设施支持，助力公共产品落地生根。",
  "4 周线上 + 5 天线下，我们寻找下一代开源生态的共建者。",
  "最终，优秀的共创方案将获得 Upstream Origin 10 万元生态发展基金、导师和其他项目增长设施支持，助力你的想法成为滋养生态的公共产品。",
];

const objectives = [
  {
    title: "普及开源文化",
    description: "深入理解开源精神、治理机制与公共产品的现代意义。",
    image: "ri:open-source-line",
  },
  {
    title: "培育生态型人才",
    description: "培养具备社区运营、传播与可持续能力的生态领航者。",
    image: "game-icons:compass",
  },
  {
    title: "连接多元伙伴",
    description: "联结政府、产业与社区资源，支持公共产品的长期发展。",
    image: "/icons/collaboration.svg",
  },
];

const stats = [
  {
    title: "4",
    suffix: "周",
    subtitle: "全面的开源生态和商业技能线上训练营与远程导师辅导",
    image: statOnline,
    imageAlt: "象征持续学习的流动波形",
  },
  {
    title: "10",
    suffix: "万元",
    subtitle: "Upstream Origin 开源生态发展基金 10 万元和导师和设施服务",
    image: statGrant,
    imageAlt: "象征资金支持的放射曲线",
  },
  {
    title: "5",
    suffix: "天",
    subtitle: "沉浸式的伙伴协作和导师辅导共创营",
    image: statOffline,
    imageAlt: "象征现场协作的金色光纹",
  },
];

const stageOverviewCards = [
  {
    title: "大本营｜线上训练",
    description: "通过四周线上课程、实践任务与同伴互助，完成《开源生态可持续发展计划》。",
    image: "streamline-logos:basecamp-logo-1",
  },
  {
    title: "挺进营｜沉浸式共创",
    description: "在北京开展五天共创营，完成项目配对、治理设计、传播打磨与成果路演。",
    image: "streamline:money-graph-arrow-increase-ascend-growth-up-arrow-stats-graph-right-grow",
  },
  {
    title: "冲顶营｜实战考验",
    description: "优胜团队获得资助和开源项目团队结对进行为期 6 个月项目协作开发。在下一轮 Upstream Origin 进行项目展示。",
    image: "streamline-sharp:summit",
  },
];

const stageOneTimeline = [
  {
    label: "第一周",
    title: "开源启航 —— 精神、治理与技术基石",
    text:
      "<strong>课程：</strong> 溯源开源运动的历史与精神，解析主流许可证的合规要点；学习社区建设理论，设计贡献者路径与治理框架；并掌握 Git/GitHub 协作、CI/CD 流程，为项目构建坚实的技术协作基础。<br />\n<strong>成果：</strong> 理解开源生态的底层逻辑，并能够独立完成一个开源项目的技术协作流程。",
  },
  {
    label: "第二周",
    title: "AI 驱动的产品增长与社区运营",
    text:
      "<strong>课程：</strong> 融合产品管理思维与多平台社区运营策略，掌握从零构建项目宣传与营销的核心技能；重点学习使用 AI coding（如 Vibe Coding）快速建站的能力，并结合 AIGC 工具高效制作全套营销物料。<br />\n<strong>成果：</strong> 能够为开源项目快速搭建官网，并运用 AI 工具构建起一套完整的营销与社区运营体系。",
  },
  {
    label: "第三周",
    title: "可持续增长 —— 商业模式与 AI 内容战略",
    text:
      "<strong>课程：</strong> 从公共服务型商业模式出发，结合 SaaS 案例、AARRR 指标与增长黑客技巧，在导师指导下设计转化漏斗与资源沟通策略；并学习运用 AI 构建从图文到音视频的全方位内容矩阵，以支撑项目的长期增长。<br />\n<strong>成果：</strong> 具备为开源项目设计清晰、可持续的商业增长路径的能力，并掌握运用 AI 制作高质量多媒体宣传内容的核心技能。",
  },
  {
    label: "第四周",
    title: "项目配对与成果展示",
    text:
      "<strong>课程：</strong> 介绍系列真实开源项目，学员选择其一，集中进行产品设计、生态增长及商业路径的方案设计，最终在线演示给项目方，争取入营名额。<br />\n<strong>成果：</strong> 产出一份针对真实开源项目的完整解决方案，涵盖产品设计、生态增长与商业路径规划。",
  },
];

const stageTwoTimeline = [
  {
    label: "第一天",
    title: "启航",
    text: "开营仪式、项目发布、导师与团队配对，快速建立共同语言。",
  },
  {
    label: "第二天",
    title: "共识",
    text: "目标共创、文化共建，形成社区节奏与行动框架。",
  },
  {
    label: "第三天",
    title: "共创",
    text: "导师深度辅导，打磨治理体系与生态发展方案。",
  },
  {
    label: "第四天",
    title: "共鸣",
    text: "AIGC 传播实战，完善故事线与展示材料。",
  },
  {
    label: "第五天",
    title: "共展",
    text: "成果路演、专家点评与颁奖，链接后续资源。",
  },
];

const mentorshipCards = [
  {
    title: "学术导师",
    description: "高校教授与研究机构，提供理论框架与文化指引。",
    image: "uil:university",
  },
  {
    title: "社区导师",
    description: "开源项目 Maintainer，分享实践经验与生态洞察。",
    image: "fluent:people-community-28-regular",
  },
  {
    title: "企业导师",
    description: "企业级 OSPO 负责人，带来产业规模化运作经验。",
    image: "carbon:network-enterprise",
  },
  {
    title: "政府与孵化机构",
    description: "政策顾问与科技园区伙伴，提供场地、政策与落地支持。",
    image: "game-icons:incubator",
  },
  {
    title: "投资机构",
    description: "开源创新基金与可持续资本，链接长期资源与融资通道。",
    image: "streamline:investment-selection",
  },
];
---

<Layout
  title="源起之道｜Upstream Origin 2025"
  description="Upstream Origin 2025 通过四周线上训练营与五天北京线下共创营，培养具备公共产品意识与可持续能力的开源生态人才。"
  navDarkMode={true}
  navBackground="header-home"
  pageTransitionName="Upstream Origin 2025"
>
  <Hero
    title="源起之道｜Upstream Origin 2025"
    quote="「一切创新，皆由溯本而生；一切变革，皆因回归而新。」"
    description="Upstream Origin 以开源精神为根、以公共产品为核，汇聚政府、产业、社区与高校伙伴，共探开源生态的可持续范式。"
    backgroundImage="/images/upstream/hero-flow.svg"
    backgroundAlt="体现流动源力的渐变背景"
    highlights={heroHighlights}
    links={heroLinks}
    tagline="溯本铸源，万变更新 | Push to origin, All commits return"
  />

  <FeatureSpotlight
    id="overview"
    title="开源公共产品基础设施"
    text="Upstream Origin 是一个聚焦开源生态建设与可持续发展的学习与实践平台。学员将在真实项目中理解社区治理、公共产品与叙事传播，完成可持续生态行动方案，并投入长期的公共影响力共创。"
    image="/images/upstream/infra.png"
    imageAlt="体现流动协作的渐变图形"
    theme="light"
    background="lightgray"
  />

  <FeatureSpotlight
    id="philosophy"
    title="核心理念"
    text="Upstream Origin 以开源精神滋养公共产品。商业化并非终点，而是维系生态信任与活力的支撑力量，让协作文明得以长期生长。Upstream Origin 相信开源不仅是一种技术路径，更是一种协作文明。我们以信任与公共产品为基石，共建可持续的开源未来。"
    image="/images/upstream/flow-core.png"
    imageAlt="体现流动概念的几何图形"
    imagePosition="left"
    theme="light"
    background="light"
  />

  <Cards
    id="objectives"
    title="项目目标"
    description="双阶段学习 + 实践路径，帮助团队夯实治理能力、传播能力与生态可持续能力。"
    cards={objectives}
    theme="light"
    background="lightgray"
  />

  <Statistics
    id="metrics"
    stats={stats}
    theme="light"
    background="light"
  />

  <Cards
    id="program"
    title="双阶段课程结构"
    description="线上沉浸式学习夯实基础，线下共创营推动项目落地，并延伸至长期陪伴。"
    cards={stageOverviewCards}
    theme="light"
    background="lightgray"
  />

  <ProgramTimeline
    id="phase-one"
    title="大本营｜线上训练"
    items={stageOneTimeline}
    theme="light"
    background="light"
  />

  <ProgramTimeline
    id="phase-two"
    title="挺进营｜沉浸式共创"
    items={stageTwoTimeline}
    theme="light"
    background="lightgray"
    variant="residency"
  />

  <Cards
    id="mentors"
    title="导师与生态支持"
    description="跨界导师团与合作伙伴，为团队提供战略、运营与资源的全方位陪伴。"
    cards={mentorshipCards}
    theme="light"
    background="light"
  />

  <SupportShowcase
    id="support"
    title="成果与激励"
    highlight="完成线下创新营并通过成果展示的团队，可获得 Upstream Origin 开源生态发展基金 10 万元，用于推进开源生态的长期建设。"
    amount="100,000"
    amountNote="Upstream Origin 开源生态发展基金"
    sections={[
      {
        title: "基金用途建议",
        bullets: [
          "社区运营与贡献者激励计划",
          "官网、视频与叙事内容建设",
          "生态合作拓展与活动组织",
          "治理优化与长期机制设计",
        ],
      },
      {
        title: "长期支持机制",
        bullets: [
          "Upstream Origin Mentorship Program｜6 个月持续导师辅导",
          "Upstream Origin Knowledge Network｜优秀案例收录公开教材",
          "政府孵化合作｜提供场地、政策、资金与落地资源",
        ],
      },
    ]}
    theme="light"
    background="lightgray"
  />

  <section class="section section-apply" id="apply" data-theme-section="dark" data-bg-section="dark">
    <div class="container">
      <div class="row">
        <div class="col">
          <h2 class="custom3">加入 Upstream Origin 2025</h2>
          <p class="apply-motto">
            一切创新，皆由溯本而生；一切变革，皆因回归而新。<br>
            Where every push returns to the source, and every source renews the flow.
          </p>
          <p>
            如果你正在建设开源社区、公共服务项目或社会创新方案，欢迎携团队报名。我们也期待导师与合作伙伴的加入，共同点亮开源生态的长期价值。
          </p>
          <div class="apply-actions">
            <Button
              text="提交项目申请"
              link="mailto:origin@upstreamlabs.org"
              openInNewTab={false}
              class="btn primary xl btn-hover"
            />
            <Button
              text="申请成为导师"
              link="mailto:origin@upstreamlabs.org"
              openInNewTab={false}
              class="btn outline btn-hover xl"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  .lead {
    font-size: 1.15rem;
    line-height: 1.7;
  }

  .section-apply {
    text-align: left;
    background: linear-gradient(135deg, rgba(43, 116, 255, 0.92), rgba(255, 198, 64, 0.88));
  }

  .section-apply p {
    max-width: 640px;
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.88);
  }

  .apply-motto {
    font-family: 'Zhuque Fangsong', serif;
    font-size: 1.3rem;
    line-height: 1.8;
    margin-bottom: 2rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.95);
  }

  .apply-motto .separator {
    margin: 0 0.75rem;
    opacity: 0.6;
  }

  .apply-actions {
    margin-top: 2rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .apply-actions .btn.primary span {
    color: #ffffff !important;
  }

  @media (max-width: 768px) {
    .lead {
      font-size: 1.02rem;
    }
  }

  #overview.feature-spotlight .feature-media {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(1rem, 3vw, 2rem);
    background: linear-gradient(135deg, rgba(88, 140, 255, 0.18) 0%, rgba(150, 190, 255, 0.12) 50%, rgba(255, 204, 130, 0.18) 100%);
    border-radius: 28px;
  }

  #overview.feature-spotlight .feature-media::before {
    display: none;
  }

  #overview.feature-spotlight .feature-media img {
    border-radius: 26px;
    mask-image: radial-gradient(circle at center, rgba(0, 0, 0, 1) 58%, rgba(0, 0, 0, 0) 98%);
    -webkit-mask-image: radial-gradient(circle at center, rgba(0, 0, 0, 1) 58%, rgba(0, 0, 0, 0) 98%);
    mask-size: 125% 125%;
    -webkit-mask-size: 125% 125%;
    mask-position: center;
    -webkit-mask-position: center;
    background-color: transparent;
  }

  #philosophy.feature-spotlight {
    background: linear-gradient(135deg, rgba(88, 140, 255, 0.95) 0%, rgba(150, 190, 255, 0.82) 48%, rgba(255, 204, 130, 0.8) 100%);
  }

  #philosophy.feature-spotlight .feature-backdrop {
    background: none;
  }

  #philosophy.feature-spotlight .feature-media {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(1rem, 3vw, 2rem);
    background: linear-gradient(135deg, rgba(40, 90, 220, 0.18) 0%, rgba(96, 140, 255, 0.14) 50%, rgba(255, 196, 120, 0.22) 100%);
    border-radius: 28px;
  }

  #philosophy.feature-spotlight .feature-media::before {
    display: none;
  }

  #philosophy.feature-spotlight .feature-media img {
    border-radius: 26px;
    mask-image: radial-gradient(circle at center, rgba(0, 0, 0, 1) 58%, rgba(0, 0, 0, 0) 98%);
    -webkit-mask-image: radial-gradient(circle at center, rgba(0, 0, 0, 1) 58%, rgba(0, 0, 0, 0) 98%);
    mask-size: 125% 125%;
    -webkit-mask-size: 125% 125%;
    mask-position: center;
    -webkit-mask-position: center;
    background-color: transparent;
  }

  #philosophy.feature-spotlight .feature-copy h2 {
    color: rgba(13, 28, 58, 0.92);
  }

  #philosophy.feature-spotlight .feature-copy p {
    color: rgba(13, 28, 58, 0.78);
  }
</style>
